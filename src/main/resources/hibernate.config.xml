<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//hibernate.util.HibernateUtil/hibernate.util.HibernateUtil Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/database_integration</property>
        <property name="hibernate.connection.username">postgres</property> <!-- User DataBase -->
        <property name="hibernate.connection.password">Gabriel.1</property> <!-- Password DataBase -->

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>

        <property name="show_sql">true</property>
        <property name="format_sql">false</property>

        <!-- Entity classes -->
        <mapping class="model.EntityLine"/>
        <mapping class="model.EntityCategory"/>
        <mapping class="model.EntityModel"/>

    </session-factory>
</hibernate-configuration>